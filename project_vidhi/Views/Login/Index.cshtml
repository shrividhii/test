
@{
    viewbag.title = "index";
    layout = "~/views/shared/_layout.cshtml";
}

<h2>index</h2>

<section class="login py-5 bg-light">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-5" id="form">
                <img src="~/butterfly/img.jpg" class="img-fluid" alt="image">
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12 col-12 text-center py-5">
                <h1 class="animate__animated animate__bounce animate__infinite">hello!!!</h1>

                <form id="loginform">

                    <div class="form-row pt-5">
                        <div class="offset-1 col-lg-10">
                            <input type="text" required class="inp px-3" id="username" placeholder="username">
                        </div>
                    </div>
                    <div class="form-row pt-3">
                        <div class="offset-1 col-lg-10">
                            <input type="password" required class="inp px-3" id="password" placeholder="password">
                        </div>
                    </div>
                    <div class="form-row pt-4 pb-3">
                        <div class="offset-1 col-lg-10">
                            <button class="btn1" onclick="validatelogin()">login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
